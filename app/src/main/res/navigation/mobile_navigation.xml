        <action
            android:id="@+id/action_extract_credit"
            app:destination="@id/nav_extract_credito">
        </action>

    </fragment>

    <fragment
        android:id="@+id/nav_plane_pay_credit"
        android:name="app.wiserkronox.loyolasocios.view.ui.home.PlanePayCreditFragment"
