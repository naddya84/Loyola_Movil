<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".view.ui.home.HomeFragment">

    <ImageView
        android:id="@+id/image_selfie"
        android:layout_width="111dp"
        android:layout_height="109dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/label_selfie"
        android:src="@drawable/ic_portrait_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/text_wellcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/font_color_home"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_user_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/font_color_home"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_selfie" />

    <TextView
        android:id="@+id/text_user_id_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:textColor="@color/font_color_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_status_user" />

    <ImageView
        android:id="@+id/image_status_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/icon_status_user_inactive"
        android:contentDescription="@string/icon_user_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_user_fullname" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/font_color_home"
        android:text="@string/text_id_member"
        app:layout_constraintEnd_toStartOf="@+id/text_user_id_member"
        app:layout_constraintTop_toTopOf="@+id/text_user_id_member" />

    <TextView
        android:id="@+id/text_inactive_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="@string/text_inactive_account"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_status_user" />

    <Button
        android:id="@+id/btn_fix_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="36dp"
        android:text="@string/btn_fix_data"
        style="@style/button_login"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/btn_certificados"
        android:layout_width="108dp"
        android:layout_height="97dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="#8017B13F"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_inactive_status">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            android:contentDescription="TODO"
            android:src="@drawable/btn_certificacion" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="CERTIFICADOS DE APORTACIÃ“N"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_credito"
        android:layout_width="108dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:background="#2015E60D"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_certificados">

        <ImageView
            android:id="@+id/ico_credito"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_credito" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/text_creditos"
            android:textColor="#040404" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>