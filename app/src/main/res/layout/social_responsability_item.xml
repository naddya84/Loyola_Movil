<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/social_resp_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gestion_layout"
            android:layout_width="0dp"
            card_view:layout_constraintWidth_percent="0.28"
            android:layout_height="match_parent"
            android:background="@color/green_kelp"
            card_view:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/label_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="GESTIÓN"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceOverline"
                card_view:layout_constraintBottom_toBottomOf="@id/text_year"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceHeadline5"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            card_view:layout_constraintWidth_percent="0.72"
            android:layout_height="match_parent"
            card_view:layout_constraintStart_toEndOf="@+id/gestion_layout"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp">


            <TextView
                android:id="@+id/calificacion_rse_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Calificación RSE"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/green_kelp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/calificacion_rse_btn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp"
                android:text="PDF"
                android:textSize="16sp"
                android:textStyle="bold"
                card_view:cornerRadius="20dp"
                card_view:icon="@drawable/ic_download_pdf"
                card_view:iconPadding="0dp"
                card_view:iconSize="18dp"
                card_view:iconTint="@color/white"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.807"
                card_view:layout_constraintStart_toEndOf="@+id/calificacion_rse_tv"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/informe_rse_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Informe RSE"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/green_kelp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/calificacion_rse_tv" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/informe_rse_btn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp"
                android:text="PDF"
                android:textSize="16sp"
                android:textStyle="bold"
                card_view:cornerRadius="20dp"
                card_view:icon="@drawable/ic_download_pdf"
                card_view:iconPadding="0dp"
                card_view:iconSize="18dp"
                card_view:iconTint="@color/white"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.854"
                card_view:layout_constraintStart_toEndOf="@+id/informe_rse_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>