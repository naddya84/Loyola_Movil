<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@color/white"
    card_view:cardCornerRadius="23dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/credit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCBCBC">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/credit_number_layout"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/green_kelp"
            card_view:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/label_credit_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CREDITO"
                android:textAppearance="?attr/textAppearanceOverline"
                android:textColor="@color/white"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="@id/text_credit_number"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_credit_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="@color/white"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="279dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/credit_number_layout">

            <LinearLayout
                android:id="@+id/lnl_body_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="5dp">

                <TextView
                    android:id="@+id/text_credit_moneda"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#BCBCBC"
                    android:text="Moneda"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_to_credit_detail"
                        android:layout_width="80dp"
                        android:layout_height="68dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="2dp"
                        android:text="DETALLE"
                        android:textSize="8sp"
                        card_view:cornerRadius="10dp"
                        card_view:icon="@drawable/icon_detail"
                        card_view:iconGravity="top"
                        card_view:iconSize="20dp" />

                    <Button
                        android:id="@+id/button_to_credit_plan_pay"
                        android:layout_width="80dp"
                        android:layout_height="68dp"
                        android:layout_marginRight="2dp"
                        android:text="PLAN DE PAGOS"
                        android:textSize="8sp"
                        card_view:cornerRadius="10dp"
                        card_view:icon="@drawable/icon_plane_pay"
                        card_view:iconGravity="top"
                        card_view:iconSize="20dp" />

                    <Button
                        android:id="@+id/button_to_credit_extract"
                        android:layout_width="80dp"
                        android:layout_height="68dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="2dp"
                        android:text="EXTRACTO"
                        android:textSize="8sp"
                        card_view:cornerRadius="10dp"
                        card_view:icon="@drawable/icon_extract"
                        card_view:iconGravity="top"
                        card_view:iconSize="20dp" />

                    <ImageView
                        android:id="@+id/image_status_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>