<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    cardView:cardCornerRadius="8dp"
    android:background="@color/background_card"
    cardView:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_card"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="190dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"
            android:text="@string/text_title_assembly_demo"
            android:textColor="@color/deep_green"
            android:textSize="16sp"
            android:textStyle="bold"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/text_date" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/second_green"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/date_demo"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_memorys_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/hint_memorys"
            cardView:layout_constraintStart_toEndOf="@+id/text_name"
            cardView:layout_constraintTop_toBottomOf="@+id/text_date"
            cardView:srcCompat="@drawable/ic_memorys" />

        <ImageView
            android:id="@+id/image_statements_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/hint_results"
            cardView:layout_constraintStart_toEndOf="@+id/image_memorys_l"
            cardView:layout_constraintTop_toBottomOf="@+id/text_date"
            cardView:srcCompat="@drawable/ic_results" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_memorys"
            android:textColor="@color/second_green"
            cardView:layout_constraintEnd_toEndOf="@+id/image_memorys_l"
            cardView:layout_constraintStart_toStartOf="@+id/image_memorys_l"
            cardView:layout_constraintTop_toBottomOf="@+id/image_memorys_l" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_results"
            android:textColor="@color/second_green"
            cardView:layout_constraintEnd_toEndOf="@+id/image_statements_l"
            cardView:layout_constraintStart_toStartOf="@+id/image_statements_l"
            cardView:layout_constraintTop_toBottomOf="@+id/image_statements_l" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>